{% extends "UserBundle::layout.html.twig" %}

{% block title %}
    {{ 'Confirmation de votre impression' | trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <h4 class="page-header">{{ 'Confirmation de votre impression' | trans }}</h4>
    {% if total.details is not empty %}
        <p>
            <br/>
            {% trans %}Vous trouverez ci-dessous la synthèse des tirages que vous allez commander. Merci de bien contrôler le montant total avant de valider l'impression.{% endtrans %}
            <br/>
            <br/>
        </p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>{{ 'Format' | trans }}</th>
                    <th>{{ 'Quantity' | trans }}</th>
                    <th>{{ 'Montant' | trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for detail in total.details %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ detail.format.size }}</td>
                        <td>{{ detail.quantity }}</td>
                        <td>{{ detail.total | number_format(2, ",", " ") }}€</td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr class="info">
                    <td colspan="2">{{ 'Total' | trans }}</td>
                    <td>{{ total.overall.quantity }}</td>
                    <td>{{ total.overall.grossTotal | number_format(2, ",", " ")  }}€</td>
                </tr>
                {% if total.discount.value > 0 %}
                    <tr class="warning">
                        <td colspan="2">Remise (€)</td>
                        <td>{{ total.discount.value }}%</td>
                        <td>-{{ total.discount.saving | number_format(2, ",", " ") }}€</td>
                    </tr>
                {% endif %}
                <tr class="success">
                    <th colspan="3">{{ 'A payer' | trans }}</th>
                    <th>{{ total.overall.total | number_format(2, ",", " ") }}€</th>
                </tr>
            </tfoot>
        </table>
        <hr/>
        {{ form_start(form) }}
        <div class="row bottom-block">
            <div class="col-lg-12">
                <div class="bottom-block-left">
                    <p>
                        {% trans %}En cliquant sur le bouton "Confirmer", vous vous engagez à payer la commande dans son intégralité à la remise des tirages.{% endtrans %}
                    </p>
                </div>
                <div class="bottom-block-right">
                    <a href="{{ path('cart') }}"><button type="button" class="btn btn-primary bottom-button"><i class="glyphicon glyphicon-backward"></i> {{ 'Modifier ma sélection' | trans }}</button></a>
                    <a href="{{ path('order_add_current') }}"><button type="submit" class="btn btn-success bottom-button"><i class="glyphicon glyphicon-print"></i> {{ 'Confirmer' | trans }}</button></a>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    {% else %}
        <p>
            &nbsp;
        </p>
        <p>
            {% trans %}Votre panier est vide. Rendez-vous dans la{% endtrans %} <a href="{{ path('home') }}">{{ 'Gallerie photos' | trans }}</a> {% trans %}pour composer votre panier.{% endtrans %}
        </p>
    {% endif %}
    {{ render(controller('UserBundle:Discount:bottomBar')) }}
{% endblock %}
