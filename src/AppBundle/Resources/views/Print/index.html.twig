{% extends "CartBundle::layout.html.twig" %}

{% block title %}
    Liste des impressions - {{ parent() }}
{% endblock %}

{% block body %}
    <h4 class="page-header">Liste des travaux d'impressions</h4>
    {% if jobList | length > 0 %}
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th class="table-detail">#</th>
                        <th class="table-detail">Nom</th>
                        <th class="table-detail">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {%  for job in jobList %}
                        <tr>
                            <th style="vertical-align: middle;"  class="table-detail">
                                {{ loop.index }}
                            </th>
                            <td>
                                {{ job }}
                            </td>
                            <td style="vertical-align: middle; white-space: nowrap;" class="table-detail">
                                <a href="{{ path('app_print_delete', {'job' : job}) }}"><button type="button" class="btn btn-danger btn-xs" data-toggle="tooltip" data-placement="top" title="Supprimer"><i class="glyphicon glyphicon-trash"></i></button></a>
                            </td>
                        </tr>
                    {%  endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="bottom-block">
            <div class="bottom-block-right">
                <a href="{{ path('app_print_delete_all') }}"><button class="btn btn-danger bottom-button">Supprimer tous les travaux en attente</button></a>
            </div>
        </div>
    {%  else %}
        <p>Il n'y a pas d'impression en attente.</p>
    {% endif %}
{% endblock %}
