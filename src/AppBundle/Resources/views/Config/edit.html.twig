{% extends "AppBundle::layout.html.twig" %}

{% block title %}
    Configuration - {{ parent() }}
{% endblock %}

{% block body %}
    <h1 class="page-header">Configurer l'application</h1>
    {{ include("AppBundle:Config:form.html.twig") }}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function () {

            updateThemePreview();

            $('#config_applicationTheme').change(updateThemePreview);

        });

        function updateThemePreview(){

            var theme = $('#config_applicationTheme').val();

            if(theme !== "")
            {
                $('img#theme-preview').removeAttr('class');
                $('img#theme-preview').attr('src', '/resources/template/' + theme + '/thumbnail.png');
            }
            else
                $('img#theme-preview').attr('class', 'hide');
        }

    </script>
{% endblock %}
