{{ form_start(form) }}

<div class="row">
    <div class="col-lg-12">
        {{ form_errors(form) }}
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            {{ form_label(form.title, "Title") }}
            {{ form_errors(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.detail, "Détail") }}
            {{ form_errors(form.detail) }}
            {{ form_widget(form.detail, {'attr': {'class': 'form-control tinymce'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.comment, "Commentaire") }}
            {{ form_errors(form.comment) }}
            {{ form_widget(form.comment, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.date, "Date de l'évènement") }}
            {{ form_errors(form.date) }}
            {{ form_widget(form.date, {'attr': {'class': 'form-control form_datetime'}}) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.active) }}
            <div class="checkbox">
                <label>
                    {{ form_widget(form.active) }} Active
                </label>
            </div>
        </div>
    </div>
</div>

{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary bottom-button'}, 'label': 'Sauvegarder'}) }}
{{ form_rest(form) }}
{{ form_end(form) }}

{{ tinymce_init() }}
