{% extends "GalleryBundle::layout.html.twig" %}

{% block title %}
    Galerie - {{ parent() }}
{% endblock %}

{% block body %}
    <h2 class="page-header">{{ gallery.title }} <small>(<i>{{ gallery.photos | length }} photos)</i></small></h2>
    <p>
        {{ gallery.detail | raw }}
    </p>
    <p>&nbsp;</p>
    {% if not gallery.photos is empty %}
        <div class="row">
            <div class="col-lg-12">
                <div id="grid" data-columns>
                    {% for photo in gallery.photos %}
                        <div class="thumbnail">
                            <a href="{{ vich_uploader_asset(photo, 'imageFile') }}" data-lightbox="gallery" data-title="Photo {{ photo.title }}, Taille {{ photo.imageWidth }}x{{ photo.imageHeight }}">
                                <img class="img-responsive" src="{{ vich_uploader_asset(photo, 'imageFile') | imagine_filter('gallery_thumb') }}" alt="{{ photo.title }}"/>
                            </a>
                            <div class="caption">
                                <p class="image-caption">
                                    {{ photo.title }}
                                </p>
                                <p class="image-caption">
                                    {% if photo.doNotCrop %}
                                        <a href="{{ path('photo_toogle_crop', { 'id': photo.id }) }}"><button type="button" class="btn btn-warning btn-xs" data-toggle="tooltip" data-placement="top" title="Autoriser le recadrage"><i class="glyphicon glyphicon-fullscreen"></i></button></a>
                                    {%  else %}
                                        <a href="{{ path('photo_toogle_crop', { 'id': photo.id }) }}"><button type="button" class="btn btn-success btn-xs" data-toggle="tooltip" data-placement="top" title="Interdire le recadrage"><i class="glyphicon glyphicon-fullscreen"></i></button></a>
                                    {%  endif %}
                                    &nbsp;
                                    <a href="{{ path('photo_delete', { 'id': photo.id }) }}"><button type="button" class="btn btn-danger btn-xs" data-toggle="tooltip" data-placement="top" title="Supprimer"><i class="glyphicon glyphicon-trash"></i></button></a>
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
    <hr>
    <div>
        <div class="bottom-block-left">
            <a href="{{ path('photo_loader', { 'id': gallery.id }) }}"><button type="button" class="btn btn-success bottom-button"><i class="glyphicon glyphicon glyphicon-plus"></i> Ajouter des photos</button></a>
            <a href="{{ path('photo_clear', { 'id': gallery.id }) }}"><button type="button" class="btn btn-danger bottom-button"><i class="glyphicon glyphicon glyphicon-trash"></i> Supprimer toutes les photos</button></a>
        </div>
        <div class="bottom-block-right">
            {% if gallery.active %}
                <a href="{{ path('gallery_toggle', { 'id': gallery.id }) }}"><button type="button" class="btn btn-success bottom-button"><i class="glyphicon glyphicon-eye-open"></i> Desactiver</button></a>
            {% else %}
                <a href="{{ path('gallery_toggle', { 'id': gallery.id }) }}"><button type="button" class="btn btn-default bottom-button"><i class="glyphicon glyphicon-eye-close"></i> Activer</button></a>
            {% endif %}
            <a href="{{ path('gallery_edit', { 'id': gallery.id }) }}"><button type="button" class="btn btn-warning bottom-button"><i class="glyphicon glyphicon-edit"></i> Editer la galerie</button></a>
            <a href="{{ path('gallery_delete', { 'id': gallery.id }) }}"><button type="button" class="btn btn-danger bottom-button"><i class="glyphicon glyphicon-remove"></i> Supprimer la gallerie</button></a>
        </div>
    </div>
    <p>
        &nbsp;
    </p>
{% endblock %}

{% block javascripts %}
    <script src="/resources/salvattore/salvattore.min.js"></script>
    <script src="/resources/lightbox/js/lightbox.min.js"></script>
{% endblock %}

{% block stylesheets %}
    <link href="/resources/lightbox/css/lightbox.min.css" rel="stylesheet">
{% endblock %}
