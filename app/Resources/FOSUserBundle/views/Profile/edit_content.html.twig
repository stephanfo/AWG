{% trans_default_domain 'FOSUserBundle' %}

<h4 class="page-header">{{ 'Editer mon profil' | trans }}</h4>

{{ form_errors(form) }}
{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
<fieldset>
    <div class="form-group">
        {{ form_label(form.email, 'form.email' | trans) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.firstname, 'Votre pr√©nom' | trans) }}
        {{ form_errors(form.firstname) }}
        {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.lastname, 'Votre nom' | trans) }}
        {{ form_errors(form.lastname) }}
        {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.location, 'Localisation' | trans) }}
        {{ form_errors(form.location) }}
        {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.current_password, 'form.current_password' | trans) }}
        {{ form_errors(form.current_password) }}
        {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
    </div>
    <input type="submit" class="btn btn-success" value="{{ 'profile.edit.submit'|trans }}" />
</fieldset>
{{ form_rest(form) }}
{{ form_end(form) }}
